{
  "name": "ssv-network",
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "solidity-coverage": "NO_GAS_ENFORCE=1 npx hardhat coverage",
    "deploy-localhost": "npx hardhat run --network hardhat scripts/deploy-all.ts",
    "deploy-testnet": "npx hardhat run --network goerli scripts/deploy-all.ts",
    "upgrade-ssv-network-localhost": "npx hardhat run --network hardhat scripts/upgrade-ssv-network.ts",
    "upgrade-ssv-network-testnet": "npx hardhat run --network goerli scripts/upgrade-ssv-network.ts",
    "upgrade-ssv-network-views-localhost": "npx hardhat run --network goerli scripts/upgrade-ssv-network-views.ts",
    "upgrade-ssv-network-views-testnet": "npx hardhat run --network goerli scripts/upgrade-ssv-network-views.ts",
    "update-clusters-mod-localhost": "npx hardhat run --network hardhat scripts/modules/deploy-mod-clusters.ts",
    "update-clusters-mod-testnet": "npx hardhat run --network goerli scripts/modules/deploy-mod-clusters.ts",
    "update-operators-mod-localhost": "npx hardhat run --network hardhat scripts/modules/deploy-mod-operators.ts",
    "update-operators-mod-testnet": "npx hardhat run --network goerli scripts/modules/deploy-mod-operators.ts",
    "update-dao-mod-localhost": "npx hardhat run --network hardhat scripts/modules/deploy-mod-dao.ts",
    "update-dao-mod-testnet": "npx hardhat run --network goerli scripts/modules/deploy-mod-dao.ts",
    "update-views-mod-localhost": "npx hardhat run --network hardhat scripts/modules/deploy-mod-views.ts",
    "update-views-mod-testnet": "npx hardhat run --network goerli scripts/modules/deploy-mod-views.ts",
    "slither": "slither contracts --solc-remaps @openzeppelin=node_modules/@openzeppelin",
    "size-contracts": "npx hardhat size-contracts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.24.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cli-table": "^0.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "chai-as-promised": "^7.1.1",
    "cli-table": "^0.3.11",
    "dotenv": "^16.0.0",
    "eslint": "^8.23.0",
    "ethers": "^5.7.2",
    "gh-pages": "^3.2.3",
    "hardhat": "^2.14.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-storage-layout-changes": "^0.1.2",
    "hardhat-tracer": "^1.2.1",
    "prompts": "^2.4.2",
    "simple-git": "^3.16.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "ssv-keys": "^1.0.1",
    "ssv-scanner": "bloxapp/ssv-scanner"
  }
}
